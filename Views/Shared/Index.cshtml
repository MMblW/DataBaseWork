@model DataBaseWork.Controllers.AllTablesViewModel
@{
    ViewData["Title"] = "Просмотр всех таблиц базы данных";
}

<div class="container">
    <h1 class="my-4">@ViewData["Title"]</h1>

    <!-- Факультеты -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2>Факультеты</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Название факультета</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Faculties)
                    {
                        <tr>
                            <td>@item.FacultyName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Специальности -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h2>Специальности</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Название</th>
                        <th>Факультет</th>
                        <th>Кол-во групп</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Specialities)
                    {
                        <tr>
                            <td>@item.SpecialityName</td>
                            <td>@item.FacultyName</td>
                            <td>@item.NumberOfGroups</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Учебные группы -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h2>Учебные группы</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Код группы</th>
                        <th>Специальность</th>
                        <th>Куратор</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.StudyGroups)
                    {
                        <tr>
                            <td>@item.GroupCode</td>
                            <td>@item.SpecialityName</td>
                            <td>@item.TutorSurname</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Студенты -->
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h2>Студенты</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>№ зачётки</th>
                        <th>Группа</th>
                        <th>ФИО</th>
                        <th>Дата рождения</th>
                        <th>Пол</th>
                        <th>Стипендия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Students)
                    {
                        <tr>
                            <td>@item.GradebookNumber</td>
                            <td>@item.GroupCode</td>
                            <td>@item.Surname @item.StudentName @item.Patronymic</td>
                            <td>@item.DateOfBirth.ToShortDateString()</td>
                            <td>@item.Gender</td>
                            <td>@(item.HasScholarship ? "Да" : "Нет")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Дисциплины -->
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h2>Дисциплины</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Название</th>
                        <th>Преподаватель</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Disciplines)
                    {
                        <tr>
                            <td>@item.DisciplineName</td>
                            <td>@item.TutorSurname</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Экзамены -->
    <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
            <h2>Экзамены</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Студент</th>
                        <th>Дисциплина</th>
                        <th>Оценка</th>
                        <th>Пересдачи</th>
                        <th>Дата</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Examinations)
                    {
                        <tr>
                            <td>@item.ExaminationId</td>
                            <td>@item.GradebookNumber</td>
                            <td>@item.DisciplineName</td>
                            <td>@item.Grade</td>
                            <td>@item.NumberOfReexamination</td>
                            <td>@item.DateOfExamination.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Дисциплины по факультетам -->
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h2>Дисциплины по факультетам</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Факультет</th>
                        <th>Дисциплина</th>
                        <th>Изучается</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DisciplinesOnFaculties)
                    {
                        <tr>
                            <td>@item.FacultyName</td>
                            <td>@item.DisciplineName</td>
                            <td>@(item.IsStudied ? "Да" : "Нет")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: 0.3s;
    }
    .card:hover {
        box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
    .card-header {
        padding: 12px 20px;
    }
    .table {
        margin-bottom: 0;
    }
    th {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
    }
    h2 {
        margin: 0;
        font-size: 1.4rem;
    }
</style>